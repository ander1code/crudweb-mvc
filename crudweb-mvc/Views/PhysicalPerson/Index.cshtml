@model PagedList.IPagedList<crudweb_mvc.ViewModels.PhysicalPersonViewModel>
@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    <div class="container" style="margin-top:5%;">
        <div class="row">
            <div class="col-md-12">
                <h2>:List.</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <div>Filter By Name:</div>
                <div class="input-group">
                    <input type="text" name="searchName" id="searchName" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-info " type="submit">Search</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th class="text-center">
                        Birthday
                    </th>
                    <th class="text-center">
                        Action
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Birthday)
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id = item.Id, opc = 1 })"><img src="~/icons/edit.png" class="IconClass" title="Edit Record" /></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="pull-right">
                Page @Model.PageNumber of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Index", new { p_numPage = page }))
            </div>
        </div>
        <div class="col-md-12">
            <a href="@Url.Action("Create")" class="btn btn-success col-md-2 pull-right">Create</a>
        </div>
    </div>
</div>