@model crudweb_mvc.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container" style="margin-top:3%;">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert">×</a>
                    <h4>Validation Errors</h4>
                    @Html.ValidationSummary()
                </div>
            }
        </div>
    </div>
</div>

<div class="container" style="margin-top:3%;">
    <div class="row">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" for="UserName">Username</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @Value = "anderson" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Value = "121181" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-success col-md-3" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}